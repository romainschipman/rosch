{
    "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true,
      "outDir": "./dist",
      "module": "ESNext",
      "target": "ESNext",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "Node",
      "isolatedModules": true,
      "resolveJsonModule": true,
      "types": ["@testing-library/jest-dom", "jest"],
    },
    "include": ["src/lib/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
  }
  